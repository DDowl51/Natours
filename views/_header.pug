header.header.sticky
  nav.nav__mobile
    .nav--img
      img(src='/img/logo-white.png', alt='Natours logo')
      a.nav--logo(href='/') Natours
    .nav--btn.btn
      ion-icon(name='menu-outline')
      ion-icon(name='close-outline')
  nav.main-nav
    nav.nav.nav--tours
      a.nav__el(href='/') All tours
    nav.nav.nav__search
      .header__logo
        img(src='/img/logo-white.png', alt='Natours logo')
      form
        input.nav__search-input(type='text' placeholder='Search..' name='search')
        button.nav__search-btn(type='submit')
          ion-icon(name="search-outline")
    nav.nav.nav--user
      if user
        a.nav__el.nav__el--logout(href='#') Log out
        a.nav__el(href='/me')
          img.nav__user-img(src=`/img/users/${user.photo}`, alt=`Photo of ${user.name}`)
          span= user.name.split(' ')[0]
      else
        a.nav__el(href='/login') Log in
        a.nav__el.nav__el--cta(href='/signup') Sign up